<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nz.ac.op.paffjj1student.musicschoolapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose 1 instrument"
        android:id="@+id/textViewChooseInstrument"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewChooseInstrument"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/radioGroupInstruments">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accordion"
            android:id="@+id/radioButtonAccordion" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bass"
            android:id="@+id/radioButtonBass" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cello"
            android:id="@+id/radioButtonCello" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guitar"
            android:id="@+id/radioButtonGuitar" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a month"
        android:id="@+id/textViewSelectMonth"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/radioGroupInstruments"
        android:layout_alignStart="@+id/radioGroupInstruments" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerMonths"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/textViewSelectMonth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enrol"
        android:id="@+id/buttonEnrol"
        android:layout_above="@+id/textViewFeedback"
        android:layout_alignRight="@+id/radioGroupInstruments"
        android:layout_alignEnd="@+id/radioGroupInstruments" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFeedback"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
